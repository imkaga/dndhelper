@model dndhelper.Models.Event

@{
    ViewData["Title"] = "Create";
}

<h1>Nowe wydarzenie</h1>
<h6>Statystyki są generowane losowo, jednak w razie potrzeby możesz je zmienić.</h6>

<style>
    .row {
        text-align: center;
        justify-content: center;
    }

    .form-group {
        margin-top: 20px;
    }
</style>

<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Name" class="control-label">Nazwa wydarzenia</label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Strength" class="control-label">Siła</label>
                <input asp-for="Strength" class="form-control" />
                <span asp-validation-for="Strength" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Dexterity" class="control-label">Zręczność</label>
                <input asp-for="Dexterity" class="form-control" />
                <span asp-validation-for="Dexterity" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Intelligence" class="control-label">Inteligencja</label>
                <input asp-for="Intelligence" class="form-control" />
                <span asp-validation-for="Intelligence" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Luck" class="control-label">Szczęście</label>
                <input asp-for="Luck" class="form-control" />
                <span asp-validation-for="Luck" class="text-danger"></span>
            </div>
            <div class="form-group">
                @Html.HiddenFor(model => model.UserId)
            </div>

            <div class="form-group">
                @Html.HiddenFor(model => model.CampaignId)
            </div>


            <div class="form-group">
                <input type="submit" value="Stwórz" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>




@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
