@model dndhelper.Models.Campaign

<header>
<img src="\images\Elementy_strony\Campaign.jpg" alt"Campaign - header"/>
</header>

<h2>Stwórz nową kampanię</h2>

@using (Html.BeginForm("Create", "Campaigns", FormMethod.Post))
{
    @Html.AntiForgeryToken()

    <div class="form-group">
        @Html.LabelFor(model => model.Name)
        @Html.TextBoxFor(model => model.Name, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Name, "", new { @class = "text-danger" })
    </div>

    <div class="form-group">
        @Html.HiddenFor(model => model.UserId)
    </div>

    <div class="form-group">
        @Html.HiddenFor(model => model.CampaignId)
    </div>

    <div class="form-group">
        <input type="submit" value="Stwórz" class="btn btn-primary" />
    </div>
}

<div>
    <a asp-action="Index">Powrót do listy</a>
</div>

@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}
