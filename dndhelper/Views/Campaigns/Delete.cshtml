@model dndhelper.Models.Campaign
header{
<img src="\images\Elementy_strony\Campaign.jpg" alt"Campaign - header" />}
<h1>Delete Campaign</h1>

<h3>Are you sure you want to delete this campaign?</h3>
<div>
    <h4>Name: @Model.Name</h4>
    <div>
        @using (Html.BeginForm("Delete", "Campaigns", new { id = Model.Id }, FormMethod.Post))
        {
            @Html.AntiForgeryToken()

            <input type="submit" value="Delete" class="btn btn-danger" />
            @Html.ActionLink("Cancel", "Index", null, new { campaignId = Model.Id, campaignName = Model.Name }, new { @class = "btn btn-secondary" })
        }
    </div>
</div>
